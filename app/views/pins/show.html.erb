<%= link_to 'Back', pins_path, class: "btn btn-default" %>
<div class="row">
  <div class="col-md-offset-2 col-md-8">
  	<div class="panel panel-default">

  		<div class="panel-heading center">
	      <%= image_tag @pin.image.url (:medium) %>
      </div>
    <div class="panel-body center">
		  <p>
		    <p><%= @pin.description %></p>
		    <p>Posted by: <strong><%= @pin.user.email if @pin.user %></strong></p>
	  	</p>
    </div>

	  	<% if @pin.user == current_user %>
	  	<div class="panel-footer center">
		  	<%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-default" %>
		  	<%= link_to raw('<span class="glyphicon glyphicon-trash"></span> Delete'), @pin, method: :delete, class: "btn btn-default" , data: { confirm: 'Are you sure?' } %>
		  </div>
	  	<% end %>
	  	<div>
	  		<br>
	  	</div>
	  </div>
  </div>
</div>